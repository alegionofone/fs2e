{{!-- systems/fs2e/templates/actor/actor-tabs/characteristics-tab.hbs --}}
<section class="characteristics grid cols-4 gap-md">

  {{!-- Body --}}
  <div class="container">
    <h3>Body</h3>
    <div class="grid cols-1">
      {{#each view.characteristics.body}}
        <label class="stat" data-stat="{{this.key}}">
          <span class="name">{{this.label}}</span>
          <span class="value"
                data-tooltip="{{this.tooltip}}"
                data-tooltip-class="fs2e-multiline">
            {{this.total}}
          </span>
        </label>
      {{/each}}
    </div>
  </div>

  {{!-- Mind --}}
  <div class="container">
    <h3>Mind</h3>
    <div class="grid cols-1">
      {{#each view.characteristics.mind}}
        <label class="stat" data-stat="{{this.key}}">
          <span class="name">{{this.label}}</span>
          <span class="value"
                data-tooltip="{{this.tooltip}}"
                data-tooltip-class="fs2e-multiline">
            {{this.total}}
          </span>
        </label>
      {{/each}}
    </div>
  </div>

  <div class="container col-span-2 spirit">
    <h3>Spirit</h3>

    <div class="grid cols-2 gap-md">
      <div class="grid cols-1 gap-md">
        {{#each view.characteristics.spirit.left}}
          <label class="stat" data-stat="{{this.leftKey}}">
            <span class="name">{{this.leftLabel}}</span>
            <span class="value" data-tooltip="{{this.tooltip}}" data-tooltip-class="fs2e-multiline">{{this.total}}</span>
          </label>
        {{/each}}
      </div>

      <div class="grid cols-1 gap-md">
        {{#each view.characteristics.spirit.right}}
          <label class="stat" data-stat="{{this.rightKey}}">
            <span class="value" data-tooltip="{{this.tooltip}}" data-tooltip-class="fs2e-multiline">{{this.total}}</span>
            <span class="name">{{this.rightLabel}}</span>
          </label>
        {{/each}}
      </div>
    </div>
  </div>
</section>
